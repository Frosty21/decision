<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

  <body>
    <script type="text/javascript" src="../scripts/ranking.js"></script>
    <%- include('partials/header') %>
      <div class="container">
        <h2>

        </h2>
        <!-- <div class="row"> -->
        <!-- <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3"> -->
        <div class="section-container options">
          <header>
            <p class="lead">Your friend at <%= email %> wants to know:<br>
            <strong><%= question %></strong></p>
            <p class="pick">Click and drag to rank the choices</p>
          </header>
          <div class="droptrue" id="ranked-options" data-id="<%= id %>" >
            <% choices.forEach((choice, index) => { %>
              <% choice.rank = index + 1; %>
                <%- include( 'partials/pollChoice', choice ); %>
                  <% }); %>
          </div>
          <footer class="submit-button">
            <input type="text" class="form-control" placeholder="Enter Name (Optional)">
            <button class="btn btn-info" id="submit-ranking">Submit</button>
          </footer>
        </div>
        <!-- </div> -->
        <!-- /.col -->
        <!-- </div> -->
        <!-- /.row -->
      </div>
      <!-- /.container -->
      <%- include('partials/footer') %>
  </body>

</html>